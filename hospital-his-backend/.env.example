# HIS Agentic Backend - Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=7860
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/his-agentic-prod

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173

# OpenRouter LLM Configuration (Primary)
OPENROUTER_API_KEY=sk-or-v1-your_key_here
OPENROUTER_MODEL=google/gemma-3-27b-it:free

# OpenRouter Agentic Inventory Agent
OPENROUTER_AGENTIC_INVENTORY_API_KEY=sk-or-v1-your_key_here
OPENROUTER_AGENTIC_INVENTORY_MODEL=nvidia/nemotron-3-nano-30b-a3b:free

# OpenRouter Agentic Insurance Pre-Auth Agent
OPENROUTER_AGENTIC_INSURANCE_API=sk-or-v1-your_key_here
OPENROUTER_AGENTIC_INSURANCE_MODEL=nvidia/nemotron-3-nano-30b-a3b:free

# Google API (if using)
GOOGLE_API_KEY=your_google_api_key_here

# External Microservices URLs (for HF Spaces deployment)
OCR_SERVICE_URL=https://username-his-id-ocr.hf.space
VOICE_SERVICE_URL=https://username-his-voice-agent.hf.space
ML_REVENUE_SERVICE_URL=https://username-his-ml-services.hf.space
ML_PREDICT_SERVICE_URL=https://username-his-ml-services.hf.space

# SMTP Configuration (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@hospital-his.com

# Hospital Info
HOSPITAL_NAME=City Hospital
HOSPITAL_EMAIL=noreply@hospital.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
