# Voice Agent - Environment Variables
# Copy to .env and fill in values

# HIS Backend Connection
HIS_API_URL=https://your-backend.hf.space/api/v1
HIS_API_USERNAME=voice_agent
HIS_API_PASSWORD=your_secure_password_here

# LLM Provider (gemini, openai, openrouter)
LLM_PROVIDER=openrouter
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini

# Google Cloud (for Speech-to-Text and Text-to-Speech)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# Voice Settings
VOICE_AGENT_PORT=7860
VOICE_LANGUAGE=en-IN
VOICE_GENDER=FEMALE

# Session Management
SESSION_TIMEOUT_SECONDS=300
MAX_CONVERSATION_TURNS=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
JWT_SECRET_KEY=your_jwt_secret_here
ENCRYPTION_KEY=your_32_byte_encryption_key_here
